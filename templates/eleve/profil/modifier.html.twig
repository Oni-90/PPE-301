{% extends "baseEleve.html.twig" %}
{% block body %}


      <div class="page-header">
        <div class="row align-items-center">
          <div class="col-sm-12">
            <div class="page-sub-header">
              <h3 class="page-title">Update Student</h3>
              <ul class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="students.html">Student</a>
                </li>
                <li class="breadcrumb-item active">Update Student</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="card comman-shadow">
            <div class="card-body">
                {{ form_start(form, {'attr':{'class':'body'}})}}
                                        <div class="row clearfix">
                                            <div class="col-md-12 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.anne, {'attr':{type:"text"  ,'class':"form-control"  , 'require':""}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.nom, {'attr':{type:"text"  ,'class':"form-control" ,'placeholder':"LastName" , 'require':""}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.prenom, {'attr':{'class':"form-control" ,'placeholder':"FirstName" ,'require':"", 'label':'FirstName*'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.email, {'attr':{'class':"form-control", 'placeholder':"example@gmail.com", 'require':"", 'label':'Email*'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.numero, {'attr':{'class':"form-control", 'placeholder':"Number", 'require':"", 'label':'Number*'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>   

                                        <div class="row clearfix">
                                            <div class="col-md-4 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.username, {'attr':{type:"text"  ,'class':"form-control" ,'placeholder':"UserName" , 'require':""}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.plainPassword, {'attr':{'class':"form-control" ,'placeholder':"***********" ,'require':"", 'label':'Prenom*'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.security, {'attr':{'class':"form-control" ,'placeholder':"***********" ,'require':"", 'label':'ConfirmPassword*'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.date_naissance, {'attr':{'class':' form-control','placeholder':"dd/MM/yyyy", 'require':"", 'label':'Birthday*'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.lieuNaissance, {'attr':{'class':"form-control", 'placeholder':"Birth Place", 'require':"", 'label':'Birth Place*'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>    
                                        <div class="row clearfix">
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.classe, {'attr':{'class':"form-control" ,'placeholder':"Classe", 'require':"", 'label':'Classe*'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group drop-custum"> 
                                                        {{ form_row(form.Adress, {'attr':{'class':"form-control show-tick" , 'require':"", 'label':'Diploma*'}}) }}
                                                </div>        
                                            </div>
                                        </div>  
                                   
                                        <div class="row clearfix">
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.sexe, {'attr':{'class':"form-control", 'require':""}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_row(form.description, {'attr':{'class':"form-control", 'placeholder':"Description", 'require':"", 'label':'Description*'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>   
                                        <div class="row clearfix">
                                            <div class="col-lg-6 col-md-12 col-sm-12">
                                              
                                                <div class="card mt-2 " style="height: 200px; margin-left: 300px; border-radius: 5%; "  >
                                                
                                                    <div class="body">
               
                                                            <center>
                                                            <div class="fallback" style="color: blue;">
                                                                {{ form_row(form.imageFile, {'attr':{'class':"form-control-file" }}) }}
                                                            </div>
                                                            </center>
                                                        
                                                    </div>
                                                </div>
                                            
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                            
                                                
                                             
                                            <a href="{{ path('secretaire_eleve_liste') }}" class="btn btn-raised btn-default">Cancel</a>
                                        </div>
                    {{ form_end(form) }}

{% endblock %}