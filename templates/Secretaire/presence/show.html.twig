{% extends 'base.html.twig' %}



{% block body %}
    <h1>Attendances</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ presence.id }}</td>
            </tr>
            <tr>
                <th>Present</th>
                <td>{{ presence.present ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>EntryTime</th>
                <td>{{ presence.HeureEntree ? presence.HeureEntree|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>OutputTime</th>
                <td>{{ presence.HeureSortie ? presence.HeureSortie|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ presence.Date ? presence.Date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>




    {% for proffesseur in proffesseur %}
    <div>
        <input type="checkbox" name="presence[{{ proffesseur.id }}]" value="1">
        <label>{{ proffesseur.nom }}</label>
         <label>{{ proffesseur.prenom }}</label>
    </div>
    {% endfor %}




    <a href="{{ path('app_presence_index') }}">Go Back</a>

    <a href="{{ path('app_presence_edit', {'id': presence.id}) }}">Update</a>

    {{ include('presence/_delete_form.html.twig') }}
{% endblock %}

